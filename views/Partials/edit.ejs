<%- include("header.ejs") %>
<div class="body">
    <h1>Edit Blogs</h1>
    <% if(locals.blogs && blogs.length > 0){ %>
        <% for(var i=0; i<blogs.length; i++) { %>
            <div class="eblog">
                <div class="er1">
                    <a href="./<%= i.toString() %>"><h3><b>Title:<%= blogs[i].title %></b></h3></a>
                    <p>Author: <%= blogs[i].name %></p>
                </div>
                <div class="er1">
                    <p>Topic:<%= blogs[i].topic %></p>
                    <p>Date:<%= blogs[i].date %></p>
                </div>
                <a href="./edit/<%= i.toString() %>"><img src="data:image/png;base64,"/></a>
                <form action="./delete/<%= i.toString() %>?_method=DELETE" method="POST" class="edit-delete">
                    <input type="submit" value="">
                </form>
            </div>
            <br>
        <% } %>
    <% } else{ %>
        <div class="no-blogs">
            <h2>No Blogs</h2>
        </div>
    <% } %>
</div>
